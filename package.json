		"@skeletonlabs/tw-plugin": "^0.3.1",
		"@sveltejs/adapter-static": "2.0.3",
		"@sveltejs/kit": "^1.27.4",
		"@types/node": "^20.11.5",
		"@typescript-eslint/eslint-plugin": "^6.0.0",
		"@typescript-eslint/parser": "^6.0.0",
		"autoprefixer": "^10.4.16",
		"eslint": "^8.28.0",
		"eslint-config-prettier": "^9.0.0",
		"eslint-plugin-svelte": "^2.30.0",
